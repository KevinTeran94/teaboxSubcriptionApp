<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckOutFragment">

    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHECKOUT"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="130dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Address"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First name"
                android:textSize="20sp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="30dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last name"
                android:textSize="20sp"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="30dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="20sp"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="30dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address 2 (Optional)"
                android:textSize="20sp"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="30dp"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="20sp"
                android:layout_marginTop="340dp"
                android:layout_marginLeft="30dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Province"
                android:textSize="20sp"
                android:layout_marginTop="380dp"
                android:layout_marginLeft="30dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postal Code"
                android:textSize="20sp"
                android:layout_marginTop="420dp"
                android:layout_marginLeft="30dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="460dp"
                android:text="Phone number"
                android:textSize="20sp">
            </TextView>

            <EditText
                android:id="@+id/checkOut_firstName"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginTop="165dp"
                android:layout_marginLeft="130dp">
            </EditText>

            <EditText
                android:id="@+id/checkOut_lastName"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginTop="205dp"
                android:layout_marginLeft="130dp">
            </EditText>

            <EditText
                android:id="@+id/checkOut_address"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginTop="245dp"
                android:layout_marginLeft="130dp">
            </EditText>

            <EditText
                android:id="@+id/checkOut_address_2"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginTop="285dp"
                android:layout_marginLeft="230dp">
            </EditText>

            <EditText
                android:id="@+id/checkOut_city"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginTop="325dp"
                android:layout_marginLeft="90dp">
            </EditText>

            <EditText
                android:id="@+id/checkOut_province"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="365dp"
                android:layout_marginLeft="120dp">
            </EditText>

            <EditText
                android:id="@+id/checkOut_postalCode"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginTop="405dp"
                android:layout_marginLeft="140dp">
            </EditText>

            <EditText
                android:id="@+id/checkOut_phone"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="445dp"
                android:layout_marginLeft="170dp">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Method"
                android:layout_marginTop="500dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="540dp"
                android:layout_marginLeft="30dp"
                android:checked="true">

                <RadioButton
                    android:id="@+id/checkout_standardShipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Standard shipping"
                    android:textSize="18sp"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment method"
                android:layout_marginTop="580dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp">
            </TextView>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="620dp"
                android:layout_marginLeft="30dp"
                android:checked="true">

                <RadioButton
                    android:id="@+id/checkout_visa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VISA"
                    android:textSize="18sp"/>
                <RadioButton
                    android:id="@+id/checkout_masterCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MasterCard"
                    android:textSize="18sp"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Holder"
                android:layout_marginTop="690dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Number"
                android:layout_marginTop="730dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry Date (mm/yy)"
                android:layout_marginTop="770dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CVV"
                android:layout_marginTop="810dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp">
            </TextView>

            <EditText
                android:id="@+id/checkOut_cardHolder"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginTop="680dp"
                android:layout_marginLeft="140dp">
            </EditText>

            <EditText
                android:id="@+id/checkOut_cardNumber"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginTop="720dp"
                android:layout_marginLeft="150dp">
            </EditText>

            <EditText
                android:id="@+id/checkOut_cardExpiryDate"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="760dp"
                android:layout_marginLeft="220dp">
            </EditText>

            <EditText
                android:id="@+id/checkOut_cardCVV"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginTop="800dp"
                android:layout_marginLeft="100dp">
            </EditText>

            <CheckBox
                android:id="@+id/checkOut_checkBox_saveCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="850dp"
                android:textSize="18sp"
                android:text="Save this card for future use">
            </CheckBox>

            <Button
                android:id="@+id/checkout_PlaceOrderBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place Order"
                android:layout_marginTop="900dp"
                android:layout_marginLeft="70dp"
                android:textSize="20sp"
                android:backgroundTint="@color/b1"
                android:textStyle="bold"
                android:textColor="@color/white">
            </Button>

            <Button
                android:id="@+id/checkout_cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginTop="900dp"
                android:layout_marginLeft="230dp"
                android:textSize="20sp"
                android:backgroundTint="@color/b1"
                android:textColor="@color/white"
                android:textStyle="bold">
            </Button>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
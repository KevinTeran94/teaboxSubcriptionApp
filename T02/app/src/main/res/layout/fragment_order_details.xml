<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailsFragment">

    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Details"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="115dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Number"
                android:textSize="20sp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="30dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Date"
                android:textSize="20sp"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="30dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer"
                android:textSize="20sp"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="30dp">
            </TextView>

            <TextView
                android:id="@+id/orderDetails_orderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="######"
                android:textSize="20sp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="190dp">
            </TextView>

            <TextView
                android:id="@+id/orderDetails_orderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textSize="20sp"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="190dp">
            </TextView>

            <TextView
                android:id="@+id/orderDetails_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="20sp"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="190dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="300dp"
                android:text="Subscription"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/orderDetails_subPlanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="300dp"
                android:text="Plan name"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Address"
                android:textSize="20sp"
                android:layout_marginTop="340dp"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/orderDetails_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sample name"
                android:textSize="20sp"
                android:layout_marginTop="380dp"
                android:layout_marginLeft="30dp">
            </TextView>

            <TextView
                android:id="@+id/orderDetails_fullAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sample address"
                android:textSize="20sp"
                android:layout_marginTop="420dp"
                android:layout_marginLeft="30dp">
            </TextView>

            <TextView
                android:id="@+id/orderDetails__phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="470dp"
                android:text="sample phone no."
                android:textSize="20sp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Method"
                android:layout_marginTop="510dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/orderDetails_shippingMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="550dp"
                android:text="Standard shipping"
                android:textSize="20sp">
            </TextView>

            <Button
                android:id="@+id/orderDetails_BackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="610dp"
                android:textSize="20sp"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:backgroundTint="@color/b1"
                android:textColor="@color/white">
            </Button>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CancelSubscriptionSuccessFragment">

    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container">
    </FrameLayout>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="86dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/checkmark"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="180dp"
        android:textSize="35sp"
        android:fontFamily="sans-serif-medium"
        android:text="Success!"
        android:textStyle="bold"
        android:textColor="@color/green10">
    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="30dp"
        android:textSize="25sp"
        android:fontFamily="sans-serif-medium"
        android:text="Your subscription is cancelled."></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="30dp"
        android:textSize="25sp"
        android:fontFamily="sans-serif-medium"
        android:text="You will no longer be billed for this product."></TextView>

    <Button
        android:id="@+id/cancelSubSuccess_backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="430dp"
        android:textSize="20sp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:backgroundTint="@color/b1"
        android:textColor="@color/white">
    </Button>

</RelativeLayout>
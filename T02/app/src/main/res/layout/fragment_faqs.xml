<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FAQsFragment">

    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQ'S"
                android:fontFamily="casual"
                android:textSize="30sp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="160dp"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/faq"
                android:layout_marginTop="160dp">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="> When does it ship?"
                android:textSize="20sp"
                android:layout_marginTop="380dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="serif"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We ship once a month, in the first week of the month."
                android:textSize="20sp"
                android:layout_marginTop="410dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="serif-monospace"
                android:inputType="textMultiLine">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="> What kind of tea is it?"
                android:textSize="20sp"
                android:layout_marginTop="470dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="serif"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weâ€™re really into artfully composed blends of loose leaf tea: Green, black, rooibos, herbal, white, fruity, flowery, bold, light, smooth, sweet, tangy. "
                android:textSize="20sp"
                android:layout_marginTop="500dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="serif-monospace"
                android:inputType="textMultiLine">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="> Why loose leaf?"
                android:textSize="20sp"
                android:layout_marginTop="640dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="serif"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loose leaf tea is decidedly superior to the pre-bagged variety. Less processing means more flavour and more benefits."
                android:textSize="20sp"
                android:layout_marginTop="670dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="serif-monospace"
                android:inputType="textMultiLine">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="> Where can you ship?"
                android:textSize="20sp"
                android:layout_marginTop="770dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="serif"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inside Canada."
                android:textSize="20sp"
                android:layout_marginTop="800dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="serif-monospace">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="> How does subscription plan work?"
                android:textSize="20sp"
                android:layout_marginTop="840dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="serif"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Select a payment cycle of your choice: Monthly, 3 Month Plan, or 6 Month Plan."
                android:textSize="20sp"
                android:layout_marginTop="870dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="serif-monospace">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Place your order."
                android:textSize="20sp"
                android:layout_marginTop="930dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="serif-monospace">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Your order will be shipped within the first week of every month."
                android:textSize="20sp"
                android:layout_marginTop="960dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="serif-monospace">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Based on your payment cycle, your card will be charged for subscription renewals till you cancel."
                android:textSize="20sp"
                android:layout_marginTop="1020dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="serif-monospace">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="> Can I cancel anytime?"
                android:textSize="20sp"
                android:layout_marginTop="1120dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="serif"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simply log in to your account to cancel your subscription."
                android:textSize="20sp"
                android:layout_marginTop="1150dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="serif-monospace">
            </TextView>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>
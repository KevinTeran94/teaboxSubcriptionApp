<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CancelPlanConfirmationFragment">

    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container">
    </FrameLayout>


    <ImageView
        android:layout_width="160dp"
        android:layout_height="86dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/warning"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="30dp"
        android:textSize="25sp"
        android:fontFamily="sans-serif-medium"
        android:text="Are you sure you want to cancel your subscription?"></TextView>

    <Button
        android:id="@+id/cancelPlanPage_confirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="380dp"
        android:textSize="20sp"
        android:backgroundTint="@color/b1"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:text="Confirm"/>

    <Button
        android:id="@+id/cancelPlanPage_cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="380dp"
        android:textSize="20sp"
        android:backgroundTint="@color/b1"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:text="Cancel"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminProductDetailsFragment">

    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Details"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="105dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product ID:"
                android:textSize="20sp"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="serif"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name:"
                android:textSize="20sp"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="serif"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity:"
                android:textSize="20sp"
                android:layout_marginTop="310dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="serif"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit Price ($/oz):"
                android:textSize="20sp"
                android:layout_marginTop="370dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="serif"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/adminProductDetails_teaId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textSize="20sp"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="190dp">
            </TextView>

            <TextView
                android:id="@+id/adminProductDetails_teaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="20sp"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="190dp">
            </TextView>

            <TextView
                android:id="@+id/adminProductDetails_teaQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textSize="20sp"
                android:layout_marginTop="310dp"
                android:layout_marginLeft="190dp">
            </TextView>

            <TextView
                android:id="@+id/adminProductDetails_teaPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$$"
                android:textSize="20sp"
                android:layout_marginTop="370dp"
                android:layout_marginLeft="200dp">
            </TextView>

            <Button
                android:id="@+id/adminProductDetails_BackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="450dp"
                android:textSize="20sp"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:backgroundTint="@color/b1"
                android:textColor="@color/white">
            </Button>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>